<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <script type="text/javascript">
    function lightsOut(){
    document.getElementById('light').className="off";
  }
  function lightsOn(){
  document.getElementById('light').className="on";
}
    </script>
    <style>
    .off{
      background-color: black;
    }
    .on {
      background-color: white;
    }
    </style>
  </head>
  <body id="light" class="">
  <button onClick="lightsOut()" type="button" name="button">Click Me</button>
  <button onClick="lightsOn()" type="button" name="button">Click Me</button>
